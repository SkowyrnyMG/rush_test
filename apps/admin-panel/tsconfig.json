{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "esnext",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  }
}
